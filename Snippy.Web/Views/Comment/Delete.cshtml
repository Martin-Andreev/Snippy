@model Snippy.Web.Models.ViewModels.CommentViewModel

<div class="col-md-12">
    <h2>Delete comment</h2>
    <h6>Are you sure you want to delete this comment?</h6>
    @Html.DisplayFor(m => m)

    @using (Html.BeginForm("Delete", "Comment", new { id = @Model.Id, snippetId = @Model.Snippet.Id, area = "" }, FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    @Html.ActionLink("Cancel", "Details", "Snippet", routeValues: new { id = @Model.Snippet.Id, area = "" }, htmlAttributes: new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }

    @*@Html.ActionLink("Delete", "Delete", "Comment", routeValues: new { id = @Model.Id, snippetId = @Model.Snippet.Id, area = "" }, htmlAttributes: new { @class = "btn btn-danger" })*@
</div>